<div class="container" id="container-forms">
  <%= form_for @concept do |f| %>
    <div class="form-group">
      <%= f.label :concept %>
      <%= f.text_field :concept, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :context %>
      <%= f.text_field :context, class: "form-control" %>
    </div>      
    <div class="form-group">
      <%= f.submit(@concept.new_record? ? 'Create' : 'Update', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>