<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1>D<sup>2</sup>y</h1>
      <p>60-second briefs of everything</p>
      <%= link_to "Sign Up", users_register_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>

<div class="container">
  <h4 class="badge">top Article</h4>
  <%= link_to articles_path do %>
    <span class="glyphicon glyphicon-chevron-right"></span>
  <% end %>
  <%= render 'articles/show_article', article: @article %>

  <h4 class="badge">top Event</h4>
  <%= link_to events_path do %>
    <span class="glyphicon glyphicon-chevron-right"></span>
  <% end %>
  <%= render 'events/show_event', event: @event %>

  <h4 class="badge">top Concept</h4>
  <%= link_to concepts_path do %>
    <span class="glyphicon glyphicon-chevron-right"></span>
  <% end %>
  <%= render 'concepts/show_concept', concept: @concept %>

  <h4 class="badge">top Opinion</h4>
  <%= link_to opinions_path do %>
    <span class="glyphicon glyphicon-chevron-right"></span>
  <% end %>
  <%= render 'opinions/show_opinion', opinion: @opinion %>
</div>