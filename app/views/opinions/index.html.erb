<%= render 'shared/header', header: 'Opinions', subtitle: 'I think X is Y' %>

<div class="container">
<% @opinion.each do |opinion| %>
    <div class="well well-lg">
      <h4>
        I think <em><%=opinion.x%></em> is <em><%=opinion.y %></em>
        <%= link_to opinion_path(opinion) do %>
          <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </h4>
      <p class="quiet">posted by <%=opinion.user.first_name%> on <%=opinion.created_at%></p>

      <hr/>

      <% if opinion.briefs.empty? #ask user to create one %>
        <p>Be the first to <%= link_to 'brief the opinion', new_brief_path(type: 'Opinion', id: opinion.id) %></p>
        <hr/>
      <% else #show top voted brief %>
        <% brief = opinion.briefs.first %>
        <h5>Briefed by <%=brief.user.first_name%></h5>
        <p class="quiet">on <%=brief.created_at%></p>
        <p><%= simple_format(brief.body) %></p>
      <% end %>

    </div>
<% end %>
</div>