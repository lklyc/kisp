<%= render 'shared/header', header: 'New Opinion', subtitle: 'I think X is Y' %>
<%= render 'shared/errors', obj: @opinion %>

<br/>
<div class="container" id="container-forms">
  <%= form_for @opinion do |f| %>
    <div class="form-group">
      <%= f.label :x %>
      <%= f.text_field :x, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :y %>
      <%= f.text_field :y, class: "form-control" %>
    </div>      
    <div class="form-group">
      <%= f.submit 'Create', class: 'btn btn-success'%>
    </div>
  <% end %>
</div>