<div class="container" id="container-forms">
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>
    </div>    
    <div class="form-group">
      <%= f.submit(@article.new_record? ? 'Create' : 'Update', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>