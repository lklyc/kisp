<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1>D<sup>2</sup>y</h1>
      <p>60-second briefs of everything</p>
      <%= link_to "Sign Up", users_register_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<%= render 'shared/header', header: 'Articles', subtitle: nil %>

<div class="container">
<% @article.each do |article| %>

    <div class="well well-lg">
      <h4><%= article.title %> &bull; <%= article.author %>
        <%= link_to article_path(article) do %>
          <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </h4>
      <quiet>
        <%= link_to 'add Brief', new_brief_path(type: 'Article', id: article.id) %> |
        <%= link_to 'comments', article_path(article, tab: 'comments') %> 
      </quiet>
      <p class="quiet">posted by <%=article.user.first_name%> on <%=article.created_at%></p>
      <hr/>
      <% if article.briefs.empty? %>
        <p>Be the first to <%= link_to 'brief the article', new_article_brief_path(article) %></p>
        <hr/>
      <% else %>
        <% brief = article.briefs.first %>
        <h5>Briefed by <%=brief.user.first_name%></h5>
        <p class="quiet">on <%=brief.created_at%></p>
        <p><%= simple_format(brief.body) %></p>
      <% end %>
    </div>
<% end %>
</div>