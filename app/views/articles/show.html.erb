<div class="container">
  <div class="page-header">
    <h1><%=@article.title%><small><em><%=link_to ' (source)', @article.url %></em></small></h1>
  </div>
</div>

<div class="container", id='container-articles-show'>
    <%= link_to 'new Brief', new_brief_path(type: 'Article', id: @article.id), class: 'btn btn-success' %>
    <% if logged_in? && current_user.id == @article.user.id %>
      <%= link_to 'edit Article', edit_article_path(@article), class: 'btn btn-primary' %>
    <% end %>
    <hr/>
    <%= render '/briefs/briefs_show', obj: @article, show_style: 'All', type: 'Article', id: @article.id %>

</div>