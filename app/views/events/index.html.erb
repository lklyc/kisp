<%= render 'shared/header', header: 'Events', subtitle: 'who-what-when-where-why' %>

<div class="container">
<% @event.each do |event| %>
    <div class="well well-lg">
      <h5>
        <%=event.who%> &bull; <%=event.what%> &bull; <%=event.when%> &bull; <%=event.where%> &bull; <%=event.why%>
        <%= link_to event_path(event) do %>
          <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </h5>
      <p class="quiet">posted by <%=event.user.first_name%> on <%=event.created_at%> (<%=link_to 'source', event.source%>)</p>
      
      <hr/>

      <% if event.briefs.empty? #ask user to create one %>
        <p>Be the first to <%= link_to 'brief the event', new_brief_path(type: 'Event', id: event.id) %></p>
        <hr/>
      <% else #show top voted brief %>
        <% brief = event.briefs.first %>
        <h5>Briefed by <%=brief.user.first_name%></h5>
        <p class="quiet">on <%=brief.created_at%></p>
        <p><%= simple_format(brief.body) %></p>
      <% end %>

    </div>
<% end %>
</div>