<%= render 'shared/header', header: 'Sign in', subtitle: nil %>

<div class="container" id="container-forms">
  <%= form_tag '/login' do %>
    <div class="form-group">
    <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= text_field_tag :password, nil, class: "form-control", placeholder: "Password", type: 'password' %>
  </div>
    <%= submit_tag 'Sign in', class: 'btn btn-success' %>
  <% end %>
  <br/>
  <p>don't have an account? <%= link_to 'Register', users_register_path %></p>
</div>